/**
 * achei essa config pro prisma que funcione com NestJs nessa issue do github
 * https://github.com/prisma/prisma/issues/28627
 * por enquanto é a única que funciona!
 */

generator client {
  provider               = "prisma-client"
  output                 = "../src/infra/database/generated"
  binaryTargets          = ["native", "linux-musl", "rhel-openssl-3.0.x"]
  moduleFormat           = "esm" 
  generatedFileExtension = "ts"
  importFileExtension    = "ts"
}

datasource db {
  provider = "mysql"
}

model Order {
  id        Int         @id @default(autoincrement())
  price     Int
  client_id Int
  createdAt DateTime    @default(now()) @map("crated_at")
  status    OrderStatus

  @@map("orders")
}

enum OrderStatus {
  PENDING
  PAYED
  CANCELED
}
